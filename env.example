BOT_TOKEN=
ADMIN_TELEGRAM_ID=

# DATABASE_URL variants:
# - If you run Node locally and Postgres via docker compose (ports: 5432): use localhost
# - If you run Node inside docker compose (service-to-service): use host=db
DATABASE_URL=postgresql://walletguard:walletguard@localhost:5432/walletguard

ETH_RPC_URL=

# Payments (NOWPayments)
# Create account at nowpayments.io, set your payout wallet, generate API key.
NOWPAYMENTS_API_KEY=
# Optional: for Sandbox you can switch base url.
NOWPAYMENTS_BASE_URL=https://api.nowpayments.io
# We price plans in USD and accept payment in a fixed crypto currency.
NOWPAYMENTS_PRICE_CURRENCY=usd
# Default: USDT on TRON (handled by NOWPayments; we no longer manage TRON wallets ourselves).
NOWPAYMENTS_PAY_CURRENCY=usdttrc20

# Where generated CSV/HTML/PDF will be stored (local path in dev)
REPORTS_STORAGE_PATH=./data/reports

# Ethereum approvals scan tuning (RPC)
# WARNING: full approvals scan via plain RPC can be heavy depending on provider limits.
ETH_APPROVALS_FROM_BLOCK=0
ETH_APPROVALS_CHUNK_SIZE=5000
# Safety cap to avoid scanning the entire chain by accident (0 = no cap)
ETH_APPROVALS_MAX_RANGE_BLOCKS=200000
