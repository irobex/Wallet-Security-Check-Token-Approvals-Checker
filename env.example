BOT_TOKEN=
ADMIN_TELEGRAM_ID=

# DATABASE_URL variants:
# - If you run Node locally and Postgres via docker compose (ports: 5432): use localhost
# - If you run Node inside docker compose (service-to-service): use host=db
DATABASE_URL=postgresql://walletguard:walletguard@localhost:5432/walletguard

ETH_RPC_URL=

TRON_MNEMONIC=
TRONGRID_API_KEY=

# Optional: auto-sweep paid USDT from per-order address to a single treasury wallet.
# This avoids manually sending TRX to each pay-address. You top up TRX only on treasury address.
TRON_SWEEP_ENABLED=false
TRON_SWEEP_TO_ADDRESS=
TRON_TREASURY_HD_INDEX=0
# target TRX balance we keep on pay-address before sweep (fallback). With delegation enabled, you can set this low (e.g. 1-2).
TRON_SWEEP_TOPUP_TRX=2

# Optional (recommended for economics): TRON resource delegation.
# Freeze TRX on treasury to get ENERGY, then delegate ENERGY to pay-address so USDT transfer uses delegated energy instead of burning TRX.
TRON_DELEGATION_ENABLED=false
TRON_DELEGATION_FREEZE_TRX=120
TRON_DELEGATION_DELEGATE_ENERGY_TRX=60
TRON_DELEGATION_DELEGATE_BANDWIDTH_TRX=0
TRON_DELEGATION_UNDELEGATE_AFTER=true
TRON_DELEGATION_MIN_PAY_TRX=1

# Where generated CSV/HTML/PDF will be stored (local path in dev)
REPORTS_STORAGE_PATH=./data/reports

# Ethereum approvals scan tuning (RPC)
# WARNING: full approvals scan via plain RPC can be heavy depending on provider limits.
ETH_APPROVALS_FROM_BLOCK=0
ETH_APPROVALS_CHUNK_SIZE=5000
# Safety cap to avoid scanning the entire chain by accident (0 = no cap)
ETH_APPROVALS_MAX_RANGE_BLOCKS=200000
